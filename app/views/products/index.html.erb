<h1>Listing Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Stock Quantity</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.title, product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= product.stock_quantity %></td>
    </tr>
  <% end %>
</table>

